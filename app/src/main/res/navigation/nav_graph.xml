<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postsFragment">

    <fragment
        android:id="@+id/postsFragment"
        android:name="ru.netology.nework.ui.PostsFragment"
        android:label="@string/posts"
        tools:layout="@layout/fragment_posts">

        <action
            android:id="@+id/action_postsFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />

        <action
            android:id="@+id/action_postsFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />

        <action
            android:id="@+id/action_postsFragment_to_signInFragment"
            app:destination="@id/signInFragment" />

    </fragment>

    <fragment
        android:id="@+id/eventsFragment"
        android:name="ru.netology.nework.ui.EventsFragment"
        android:label="@string/events"
        tools:layout="@layout/fragment_events">

        <action
            android:id="@+id/action_eventsFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />

        <action
            android:id="@+id/action_eventsFragment_to_newEventFragment"
            app:destination="@id/newEventFragment" />

        <action
            android:id="@+id/action_eventsFragment_to_signInFragment"
            app:destination="@id/signInFragment" />

    </fragment>

    <fragment
        android:id="@+id/usersFragment"
        android:name="ru.netology.nework.ui.UsersFragment"
        android:label="@string/users"
        tools:layout="@layout/fragment_users">

        <action
            android:id="@+id/action_usersFragment_to_userDetailFragment"
            app:destination="@id/userDetailFragment" />

        <action
            android:id="@+id/action_usersFragment_to_signInFragment"
            app:destination="@id/signInFragment" />

    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="ru.netology.nework.ui.SignInFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_sign_in">

        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />

        <action
            android:id="@+id/action_signInFragment_to_postsFragment"
            app:destination="@id/postsFragment"
            app:popUpTo="@id/postsFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="ru.netology.nework.ui.SignUpFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_sign_up">

        <action
            android:id="@+id/action_signUpFragment_to_postsFragment"
            app:destination="@id/postsFragment"
            app:popUpTo="@id/postsFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nework.ui.NewPostFragment"
        android:label="Новый пост"
        tools:layout="@layout/fragment_new_post">

        <action
            android:id="@+id/action_newPostFragment_to_postsFragment"
            app:destination="@id/postsFragment"
            app:popUpTo="@id/postsFragment"
            app:popUpToInclusive="true" />

        <argument
            android:name="postId"
            app:argType="long"
            android:defaultValue="0" />

    </fragment>

    <fragment
        android:id="@+id/newEventFragment"
        android:name="ru.netology.nework.ui.NewEventFragment"
        android:label="Новое событие"
        tools:layout="@layout/fragment_new_event">

        <action
            android:id="@+id/action_newEventFragment_to_eventsFragment"
            app:destination="@id/eventsFragment"
            app:popUpTo="@id/eventsFragment"
            app:popUpToInclusive="true" />

        <argument
            android:name="eventId"
            app:argType="long"
            android:defaultValue="0" />

    </fragment>

    <fragment
        android:id="@+id/postDetailFragment"
        android:name="ru.netology.nework.ui.PostDetailFragment"
        android:label="Детали поста"
        tools:layout="@layout/fragment_post_detail">

        <argument
            android:name="postId"
            app:argType="long" />

        <action
            android:id="@+id/action_postDetailFragment_to_postsFragment"
            app:destination="@id/postsFragment"
            app:popUpTo="@id/postsFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="ru.netology.nework.ui.EventDetailFragment"
        android:label="Детали события"
        tools:layout="@layout/fragment_event_detail">

        <argument
            android:name="eventId"
            app:argType="long" />

        <action
            android:id="@+id/action_eventDetailFragment_to_eventsFragment"
            app:destination="@id/eventsFragment"
            app:popUpTo="@id/eventsFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/userDetailFragment"
        android:name="ru.netology.nework.ui.UserDetailFragment"
        android:label="Профиль пользователя"
        tools:layout="@layout/fragment_user_detail">

        <argument
            android:name="userId"
            app:argType="long" />

        <argument
            android:name="isCurrentUser"
            app:argType="boolean"
            android:defaultValue="false" />

        <action
            android:id="@+id/action_userDetailFragment_to_usersFragment"
            app:destination="@id/usersFragment"
            app:popUpTo="@id/usersFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/myProfileFragment"
        android:name="ru.netology.nework.ui.MyProfileFragment"
        android:label="Мой профиль"
        tools:layout="@layout/fragment_user_detail">

        <action
            android:id="@+id/action_myProfileFragment_to_postsFragment"
            app:destination="@id/postsFragment"
            app:popUpTo="@id/postsFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="ru.netology.nework.ui.MapFragment"
        android:label="Выбор локации"
        tools:layout="@layout/fragment_map">

        <action
            android:id="@+id/action_mapFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />

        <action
            android:id="@+id/action_mapFragment_to_newEventFragment"
            app:destination="@id/newEventFragment" />

    </fragment>

    <action
        android:id="@+id/action_global_userDetailFragment"
        app:destination="@id/userDetailFragment">

        <argument
            android:name="userId"
            app:argType="long" />

        <argument
            android:name="isCurrentUser"
            app:argType="boolean"
            android:defaultValue="false" />

    </action>

    <action
        android:id="@+id/action_global_myProfileFragment"
        app:destination="@id/myProfileFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="false" />

</navigation>