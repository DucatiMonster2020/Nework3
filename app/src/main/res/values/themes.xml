<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NeWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/lilac</item>
        <item name="colorPrimaryVariant">@color/light_pink_300</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/light_pink_300</item>
        <item name="colorSecondaryVariant">@color/light_pink_100</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Toolbar/AppBar -->
        <item name="toolbarStyle">@style/Widget.NeWork.Toolbar</item>
    </style>

    <style name="Theme.NeWork.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NeWork.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.NeWork.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>
</resources>