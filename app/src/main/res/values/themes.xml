<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NeWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Toolbar/AppBar -->
        <item name="toolbarStyle">@style/Widget.NeWork.Toolbar</item>
    </style>

    <style name="Theme.NeWork.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NeWork.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.NeWork.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>
</resources>